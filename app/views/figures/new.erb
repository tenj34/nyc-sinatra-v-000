<h1>Create a New Figure</h1>
 <form action="/figures" method="POST">
	<p>Name<input type="text" name="figure[name]" id="figure_name"></p>
	<label>Titles</label><br>
		<% Title.all.each do |title| %>
		<input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"><%= title.name %><br>
		<% end %>
	<p>Create New Title<input type="text" name="title[name]" id="new_title"></p>
	<label>Landmarks</label><br>
		<% Landmark.all.each do |landmark| %>
		<input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"><%= landmark.name %><br>
		<% end %>
	<p>Create New Landmark</p>
	<label>Name:<input type="text" name="landmark[name]" id="new_landmark"></label>
	<label>Year:<input type="text" name="landmark[year_completed]"></label>
	<input type="submit" value="Create New Figure">
</form> 
