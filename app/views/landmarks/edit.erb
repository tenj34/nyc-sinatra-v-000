	<input id="hidden" type="hidden" name="_method" value="patch">

	<p>Edit Landmark:<input type="text" name="landmark[name]" id="name" value="<%= @landmark.name %>"></p>
	<p>Edit Year Completed:<input type="text" name="landmark[year_completed]" id="year_completed"> value="<%= @landmark.year_completed %>"></p>
